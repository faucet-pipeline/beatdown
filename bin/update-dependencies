#!/usr/bin/env bash

set -eu

repo_uri="https://x-access-token:$DEPENDENCIES_TOKEN@github.com/$GITHUB_REPOSITORY.git"
remote_name="origin"
main_branch="master"
target_branch="dependencies-latest"
dist_dir="dist"
pr_title="automated dependencies update"

cd "$GITHUB_WORKSPACE"

git config user.name "$GITHUB_ACTOR"
git config user.email "$GITHUB_ACTOR@bots.github.com"

git checkout -B "$target_branch"
git reset --hard "$remote_name/$main_branch"

ncu -u
git add package.json

git commit -m "updated dependencies"
if [ "$?" != "0" ]; then
	echo "nothing to commit"
	exit 0
fi

git remote set-url "$remote_name" "$repo_uri"
git push --force-with-lease "$remote_name" "$target_branch"

# create pull request
curl -u "$DEPENDENCIES_USER:$DEPENDENCIES_TOKEN" \
	-X POST "https://api.github.com/repos/$GITHUB_REPOSITORY/pulls" \
	--data-binary @- <<EOF
{
	"title": "$pr_title",
	"head": "$target_branch",
	"base": "$main_branch"
}
EOF
